<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edit_txt1"
        android:layout_width="320dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtv_1"
        tools:layout_editor_absoluteY="0dp"
        android:inputType="textNoSuggestions"/>

    <EditText
        android:id="@+id/edit_txt2"
        android:layout_width="283dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toRightOf="@+id/txtv_2"
        app:layout_constraintTop_toBottomOf="@id/edit_txt1" />

    <TextView
        android:id="@+id/txtv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="飼料重量:"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@id/edit_txt1"

        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txtv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginRight="40dp"
        android:text="飼料剩餘重量:"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@+id/edit_txt2"
        app:layout_constraintTop_toBottomOf="@id/txtv_1" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:text="傳送"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_txt2"
        tools:layout_editor_absoluteX="127dp" />
    <EditText
        android:id="@+id/edit_txt3"
        android:layout_width="320dp"
        android:layout_height="54dp"

        tools:layout_editor_absoluteY="0dp"
        android:inputType="textNoSuggestions"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>